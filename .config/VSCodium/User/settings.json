{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    },
    "editor.dragAndDrop": false,
    "editor.linkedEditing": true,
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.enabled": false,
    "explorer.confirmDelete": false,
    "git.autofetch": true,
    "editor.tabSize": 2,
    "editor.cursorBlinking": "expand",
    "editor.bracketPairColorization.enabled": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "workbench.editor.wrapTabs": true,
    "workbench.startupEditor": "none",
    "gitlens.advanced.messages": {
      "suppressGitMissingWarning": true
    },
    "terminal.external.windowsExec": "c:/Program Files/PowerShell/7/pwsh.exe",
    "security.workspace.trust.untrustedFiles": "newWindow",
    "window.restoreWindows": "none",
    "editor.formatOnSaveMode": "modifications",
    "dotfiles.repository": "https://github.com/raulbrennersc/dotfiles",
    "dotfiles.targetPath": "~/dotfiles",
    "dotfiles.installCommand": "~/dotfiles/install.sh",
    "git.mergeEditor": true,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "editor.fontFamily": "'MesloLGS Nerd Font', 'MesloLGS Nerd Font Mono'",
    "terminal.integrated.fontFamily": "'MesloLGS Nerd Font', 'MesloLGS Nerd Font Mono'",
    "json.schemas": [],
    "editor.cursorSmoothCaretAnimation": "on",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "window.commandCenter": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "workbench.iconTheme": "material-icon-theme",
      "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
      },
      "remote.SSH.remotePlatform": {
        "raspi": "linux"
      },
      "[json]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
      },
      "[javascript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
  "eslint.validate": [
      "javascript",
      "typescript"
  ],
    "files.watcherExclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/*/**": true,
      "**/.hg/store/**": true
    },
    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "onHover",
    "workbench.colorCustomizations": {
    "tree.indentGuidesStroke": "#929c95"
    },
    "material-icon-theme.activeIconPack": "nest",
    "material-icon-theme.folders.theme": "classic",
    "material-icon-theme.hidesExplorerArrows": true,
    "update.showReleaseNotes": false,
    "window.density.editorTabHeight": "compact",
    "window.zoomLevel": 2,
    "workbench.colorTheme": "Catppuccin Mocha",
    "window.titleBarStyle": "custom",
    "diffEditor.ignoreTrimWhitespace": false
  }
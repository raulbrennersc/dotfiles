{
  //based on https://github.com/JanDeDobbeleer/oh-my-posh/blob/main/themes/amro.omp.json,
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{if .Env.DEVCONTAINER}}\uea85{{end}} {{.UserName}} in {{.PWD}}",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "#45F1C2",
          "template": "{{if .Env.DEVCONTAINER}}\uf0e7{{else}}{{.Icon}}{{end}}\u200A{{.UserName}} on",
          "properties": {
            "macos": "mac"
          }
        },
        {
          "foreground": "#0CA0D8",
          "properties": {
            "folder_separator_icon": "/",
            "style": "agnoster_short"
          },
          "style": "plain",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#14A5AE",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_upstream_icon": true,
	    "fetch_status": true
          },
          "style": "plain",
          "template": "{{ .UpstreamIcon }} {{ .Ref }}{{ if and (eq .Ahead 0) (eq .Behind 0) }} \u2261{{end}}{{ if gt .Ahead 0 }} \u2191{{.Ahead}}{{end}}{{ if gt .Behind 0 }} \u2193{{.Behind}}{{end}}",
	  "templatea": "",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#cd5e42",
          "style": "plain",
          "template": "\ue3bf ",
          "type": "root"
        },
        {
          "foreground": "#CD4277",
          "style": "plain",
          "template": "\u276f ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 3
}

{
  //based on https://github.com/JanDeDobbeleer/oh-my-posh/blob/main/themes/amro.omp.json,
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{if .Env.DEVCONTAINER}}\uea85{{end}} {{.UserName}} in {{.PWD}}",
  "transient_prompt": {
    "foreground": "#f38ba8",
    "style": "plain",
    "template": "\u276f ",
    "type": "text"

  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "#8babe2",
          "template": "{{if .Env.DEVCONTAINER}}\uf0e7{{else}}{{.Icon}}{{end}} {{.UserName}} on",
          "properties": {
            "macos": "mac"
          }
        },
        {
          "foreground": "#cba6f7",
          "properties": {
            "folder_separator_icon": "/",
            "style": "agnoster_short"
          },
          "style": "plain",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#b4befe",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_upstream_icon": true,
	    "fetch_status": true,
	    "branch_icon":""
          },
          "style": "plain",
          "type": "git",
          "template": "({{ .UpstreamIcon }} {{ .HEAD }}) {{if .BranchStatus }}{{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "overflow": "hide",
      "segments": [
        {
          "foreground": "#89b4fa",
          "properties": {
            "style": "dallas",
            "threshold": 0
          },
          "style": "diamond",
          "template": " {{ .FormattedMs }}s <#cba6f7>|</>",
          "type": "executiontime"
        },
        {
          "foreground": "#89b4fa",
          "properties": {
            "time_format": "15:04:05"
          },
          "style": "diamond",
          "template": " {{ .CurrentDate | date .Format }} ",
          "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#f38ba8",
          "style": "plain",
          "template": "\ue3bf ",
          "type": "root"
        },
        {
          "foreground": "#f38ba8",
          "style": "plain",
          "template": "\u276f ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 3
}
